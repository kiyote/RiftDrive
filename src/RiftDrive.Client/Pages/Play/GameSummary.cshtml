@inherits GameSummaryComponent
@layout MainLayout
@page "/game/summary"

    <GamePlayersSummary GameId=@Game?.Id.Value GameName=@Game?.Name></GamePlayersSummary>

@if(Game.State == Shared.GameState.WaitingForPlayers)
{
<SimpleButton Clicked=@StartGame>Start Game</SimpleButton>
}

@if (Game.State == Shared.GameState.Active)
{
    <SimpleButton Clicked=@PlayGame>Play Game</SimpleButton>
}

