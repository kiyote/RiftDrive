@inherits SelectCrewComponent

@if (Crew == default)
{
    <div class="fadein-content">Loading...</div>
}
else
{
    <div class="container container-rounded fadein-content">
        <h5>Crew</h5>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col"></th>
                    <th scope="col">
                        Name
                    </th>
                    <th scope="col">
                        Discipline
                    </th>
                    <th scope="col">
                        Expertise
                    </th>
                    <th scope="col">
                        Training
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var crew in Crew)
                {
                    <tr>
                        <td><input class="form-check-input" type="checkbox" value="" @onchange="( () => { SelectionChanged(crew.Id); })" /></td>
                        <td>@crew.Name</td>
                        <td>@crew.Discipline</td>
                        <td>@crew.Expertise</td>
                        <td>@crew.Training</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="container float-right">
        <span>
            Crew Selected : @(SelectedCrew.Count()) / 4
        </span>
        <button type="button" class="btn btn-primary" disabled="@(SelectedCrew.Count() != 4)" @onclick="SelectClicked">Launch</button>
    </div>
}