@inherits GamePlayersSummaryComponent

<Card Margin="Margin.Is4.OnY.Is2.OnMobile.Is5.OnDesktop">
    <CardBody>
        <CardTitle Size="5">Players in @Game.Name</CardTitle>
    </CardBody>
    <CardBody>
        <CardText>
            <TableContainer IsBordered="true" IsStriped="true">
                <TableBody>
                    @foreach (var player in Players)
                    {
                        <TableRow>
                            <TableRowCell>@player.Name</TableRowCell>
                            <TableRowCell>
                                <SimpleButton Clicked=@(async () => { await EditPlayer(player);}) Color="Color.Primary">Edit</SimpleButton>
                            </TableRowCell>
                        </TableRow>
                    }
                </TableBody>
            </TableContainer>
        </CardText>
    </CardBody>
</Card>

<Modal ref="ModalRef">
    <ModalBackdrop />
    <ModalContent Size="ModalSize.Small" IsCentered="true">
        <ModalHeader>
            <ModalTitle>
                <Icon Name="IconName.Edit" />
                Player
            </ModalTitle>
            <CloseButton Clicked=@CancelEdit />
        </ModalHeader>
        <ModalBody>
            <Field>
                <FieldLabel>Name</FieldLabel>
                <TextEdit Placeholder="Enter name..." bind-Text=@EditPlayerName />
            </Field>
        </ModalBody>
        <ModalFooter>
            <SimpleButton Color="Color.Secondary" Clicked=@CancelEdit>Cancel</SimpleButton>
            <SimpleButton Color="Color.Primary" Clicked=@ApplyChanges>Apply</SimpleButton>
        </ModalFooter>
    </ModalContent>
</Modal>
